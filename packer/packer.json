{
  "builders": [{
    "type": "docker",
    "image": "ubuntu",
    "export_path": "zookeeper.tar"
  }],

  "provisioners": [{
    "type": "shell",
    "inline": ["apt-get update; apt-get install curl -y"]
  }, {
    "type": "chef-solo",
    "cookbook_paths": ["./chef/cookbooks", "./chef/site-cookbooks"],
    "run_list": ["zookeeper_role"]
  }],

  "post-processors": [{
    "type": "docker-import",
    "repository": "ted27/packer-zookeeper",
    "tag": "0.1"
  }]
}
